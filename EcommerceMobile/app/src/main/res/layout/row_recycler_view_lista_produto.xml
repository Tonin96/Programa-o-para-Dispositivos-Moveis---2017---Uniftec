<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/row_recycler_view_lista_produto_linear_layout_imagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/row_recycler_view_lista_produto_imagem"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ft_4gx0m4rifoqxbz9lejqq6wypqyo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row_recycler_view_lista_produto_titulo"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/row_recycler_view_lista_produto_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minions"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/row_recycler_view_lista_produto_label_preco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço:"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/row_recycler_view_lista_produto_preco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/row_recycler_view_lista_produto_label_preco"
                            android:text="R$ 100,00"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/row_recycler_view_lista_produto_label_preco_desconto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço Desconto:"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/row_recycler_view_lista_produto_preco_desconto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/row_recycler_view_lista_produto_label_preco_desconto"
                            android:text="R$ 100,00"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>