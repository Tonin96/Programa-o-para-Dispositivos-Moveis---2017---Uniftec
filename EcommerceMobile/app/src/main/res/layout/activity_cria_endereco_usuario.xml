<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/barra_superior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:theme="@style/Toolbar">

                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.AppBarLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_rua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/barra_superior">

            <TextView
                android:id="@+id/activity_cria_endereco_usuario_label_rua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rua:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_cria_endereco_usuario_edit_text_rua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_rua">

            <TextView
                android:id="@+id/activity_cria_endereco_usuario_label_numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃºmero:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_cria_endereco_usuario_edit_text_numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_complemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_numero">

            <TextView
                android:id="@+id/activity_cria_endereco_usuario_label_complemento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complemento:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_cria_endereco_usuario_edit_text_complemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_bairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_complemento">

            <TextView
                android:id="@+id/activity_cria_endereco_usuario_label_bairro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bairro:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_cria_endereco_usuario_edit_text_bairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_bairro">

            <TextView
                android:id="@+id/activity_cria_endereco_usuario_label_cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_cria_endereco_usuario_edit_text_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_cidade">

            <TextView
                android:id="@+id/activity_cria_endereco_usuario_label_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_cria_endereco_usuario_edit_text_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_estado">

            <Button
                android:id="@+id/activity_cria_endereco_usuario_button_salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar"
                />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
